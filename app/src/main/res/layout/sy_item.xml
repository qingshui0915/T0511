<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/show_im"
        android:layout_width="120dp"
        android:layout_height="160dp" />
    <TextView
        android:id="@+id/show_tv"
        android:layout_toRightOf="@id/show_im"
        android:textSize="16sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/show_ptv"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@id/show_im"
        android:layout_below="@id/show_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.bawei.t0511.comtor.ZuHeView
        android:id="@+id/zuhe"
        android:layout_toRightOf="@id/show_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.bawei.t0511.comtor.ZuHeView>
</RelativeLayout>